<td width="60%">
    <table width="100%">
        <tr>
            <td class="pictures" align="center">
                <table>
                    <tr>
                        <% @person['images'].each do |i| %>
                            <td>
                                 <img src="<%= i['thumb_location'] %>"/>
                            </td>
                        <% end %>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td align="center" class="personName"><%= @person['name'] %>
                <% if @person['roles'].length > 0 %>
                    <% @roles = '' %>
                    <% @person['roles'].each_with_index do |r,i| %>
                        <% @roles = (i > 0 ? @roles + ', ' : '') + r['name'] %>
                    <% end %>
                    <%= ': ' + @roles %>
                <% end %>
            </td>
        </tr>

         
        <tr>
            <td class="maintext">
            <%= @person['description'] %>
            </td>
        </tr>
    </table>
</td>
